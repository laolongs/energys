<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/border"
    tools:context="cn.tties.energy.view.activity.OpsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@mipmap/ops_bg"
            android:layout_weight="1">
            <android.support.v7.widget.Toolbar
                android:id="@+id/data_toolbar"
                style="@style/headtoolbar"
                app:layout_scrollFlags="scroll|enterAlways">
                <ImageView
                    android:layout_marginTop="@dimen/y65"
                    android:layout_width="@dimen/x229"
                    android:layout_height="@dimen/y66"
                    android:src="@mipmap/ic_logo"
                    style="@style/toolbar_center"/>
            </android.support.v7.widget.Toolbar>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_marginTop="@dimen/y10"
                    android:id="@+id/ops_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="62sp"
                    android:text="0"
                    android:layout_gravity="center"
                    android:typeface="monospace"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="待处理问题"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y8"
            android:background="@color/border"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <View
                android:layout_width="@dimen/x12"
                android:layout_height="match_parent"
                android:background="@color/border"
                />
            <LinearLayout
                android:layout_width="@dimen/x120"
                android:layout_height="match_parent"
                android:background="@drawable/btn_date_dwmy_normal"
                android:orientation="vertical"
               >
                <LinearLayout
                    android:id="@+id/llQues1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_marginTop="@dimen/y25"
                        android:id="@+id/iv1"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y50"
                        android:background="#00000000"
                        android:src="@drawable/selector_radiobtn_ops_imgone" />

                    <TextView
                        android:layout_marginTop="@dimen/y5"
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运维"
                        android:textSize="11sp"
                        android:textColor="@drawable/selector_radiobtn_ops_text" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llQues2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_marginTop="@dimen/y25"
                        android:id="@+id/iv2"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y50"
                        android:background="#00000000"
                        android:src="@drawable/selector_radiobtn_ops_imgtwo" />

                    <TextView
                        android:layout_marginTop="@dimen/y5"
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房间"
                        android:textSize="11sp"
                        android:textColor="@drawable/selector_radiobtn_ops_text" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llQues3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_marginTop="@dimen/y25"
                        android:id="@+id/iv3"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y50"
                        android:background="#00000000"
                        android:src="@drawable/selector_radiobtn_ops_imgthree" />

                    <TextView
                        android:layout_marginTop="@dimen/y5"
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="柜子"
                        android:textSize="11sp"
                        android:textColor="@drawable/selector_radiobtn_ops_text" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llQues4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_marginTop="@dimen/y25"
                        android:id="@+id/iv4"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y50"
                        android:background="#00000000"
                        android:src="@drawable/selector_radiobtn_ops_imgfour" />

                    <TextView
                        android:layout_marginTop="@dimen/y5"
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="变压器"
                        android:textSize="11sp"
                        android:textColor="@drawable/selector_radiobtn_ops_text" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llQues5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_marginTop="@dimen/y25"
                        android:id="@+id/iv5"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y50"
                        android:background="#00000000"
                        android:src="@drawable/selector_radiobtn_ops_imgfive" />

                    <TextView
                        android:layout_marginTop="@dimen/y5"
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绝缘器"
                        android:textSize="11sp"
                        android:textColor="@drawable/selector_radiobtn_ops_text" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llQues6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_marginTop="@dimen/y25"
                        android:id="@+id/iv6"
                        android:layout_width="@dimen/x56"
                        android:layout_height="@dimen/y50"
                        android:background="#00000000"
                        android:src="@drawable/selector_radiobtn_ops_imgsix" />

                    <TextView
                        android:layout_marginTop="@dimen/y5"
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="环境"
                        android:textSize="11sp"
                        android:textColor="@drawable/selector_radiobtn_ops_text" />
                </LinearLayout>

                <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y88"
                />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x12"
                android:layout_height="match_parent"
                android:background="@color/border"
               />
                <RelativeLayout
                    android:id="@+id/ops_right_RL"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">
                    <in.srain.cube.views.ptr.PtrFrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ops_refreshLayout"
                        app:ptr_duration_to_back_refresh="200"
                        app:ptr_duration_to_close_footer="1000"
                        app:ptr_duration_to_close_header="1000"
                        app:ptr_keep_header_when_refresh="true"
                        app:ptr_pull_to_fresh="false"
                        app:ptr_ratio_of_header_height_to_refresh="1.2"
                        app:ptr_resistance="1.7">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/ops_rcy_right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                        </android.support.v7.widget.RecyclerView>

                    </in.srain.cube.views.ptr.PtrFrameLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/ops_rcy_hint"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/y40"
                        android:layout_centerInParent="true"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已经显示全部内容"/>
                </RelativeLayout>

            <View
                android:layout_width="@dimen/x12"
                android:layout_height="match_parent"
                android:background="@color/border"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

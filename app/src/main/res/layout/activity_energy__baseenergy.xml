<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    tools:context="cn.tties.energy.view.activity.Energy_BaseenergyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <include layout="@layout/toobar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y85"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_layout">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:textSize="13sp"
                android:layout_height="match_parent"
                android:text="变压器容量" />
            <TextView
                android:textSize="13sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="缴费模式" />
            <TextView
                android:textSize="13sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="上月基本电费" />
        </LinearLayout>


        <View
            style="@style/cut_off_line_2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y85"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_layout">

            <TextView
                android:id="@+id/energy_base_kva"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="0kVA" />
            <TextView
                android:id="@+id/energy_base_type"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="容量" />
            <TextView
                android:id="@+id/energy_base_price"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="0元" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y116">
            <LinearLayout
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x12"
                android:layout_height="@dimen/y116"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/x24"
                android:id="@+id/data_factor"
                android:orientation="horizontal"
                android:background="@drawable/beseenergy_item_bg"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="本月最大需量"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:id="@+id/energy_base_monthmax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x15"
                        android:text="678kw"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发生时间"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:id="@+id/energy_base_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-11-01  12：07"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/cut_off_line_5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/selector_layout">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textSize="13sp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/x25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择年度" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/x20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/energy_base_year"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018年" />
                <ImageView
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/energy_base_select"
                    android:src="@mipmap/arrowsblack"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/y24"
                    />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y434"
            android:orientation="vertical">
            <cn.tties.energy.chart.LineDataChart
                android:id="@+id/energy_base_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y414">

            </cn.tties.energy.chart.LineDataChart>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_no"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y148"
            android:background="#F2F2F2"
            >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:text="报装方案" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x23"
            android:layout_marginRight="@dimen/x23"
            android:layout_width="match_parent"
            android:background="@drawable/beseenergy_item_bgtwos"
            android:layout_height="@dimen/y174">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/beseenergy_item_bgtwo"
                android:layout_weight="3">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_marginTop="@dimen/y14"
                    android:layout_marginLeft="@dimen/y13"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="最优"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginBottom="@dimen/y8"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textSize="11sp"
                    android:layout_weight="2"
                    android:text="推荐报装方案"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/en_tv3"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报装容量"/>
                <TextView
                    android:id="@+id/energy_base_plan_kw1"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/en_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="0kW"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="5">
                <TextView
                    android:id="@+id/en_tv4"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全年基本容量"/>
                <TextView
                    android:id="@+id/energy_base_plan_allprice1"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/en_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="0元"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            style="@style/cut_off_line_5dp"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/x23"
            android:layout_marginRight="@dimen/x23"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/beseenergy_item_bgtwos"
            android:layout_height="@dimen/y174">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/beseenergy_item_bgthree"
                android:layout_weight="3">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginTop="@dimen/y14"
                    android:layout_marginLeft="@dimen/y13"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="容量"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginBottom="@dimen/y8"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="13sp"
                    android:text="容量报装方案"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="4">
                <TextView
                    android:id="@+id/en_tv5"
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="容量"/>
                <TextView
                    android:id="@+id/energy_base_plan_kw2"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/en_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="0kW"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="5">
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/en_tv6"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全年基本容量"/>
                <TextView
                    android:id="@+id/energy_base_plan_allprice2"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/en_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="0元"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            style="@style/cut_off_line_5dp"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/x23"
            android:layout_marginRight="@dimen/x23"
            android:id="@+id/data_press"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/beseenergy_item_bgtwos"
            android:layout_height="@dimen/y174">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/beseenergy_item_bgfour"
                android:layout_weight="3">
                <TextView
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:layout_marginTop="@dimen/y14"
                    android:layout_marginLeft="@dimen/y13"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="需量"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>
                <TextView
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginBottom="@dimen/y8"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:text="最大需量方案"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="4">
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/en_tv1"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大需量"/>
                <TextView
                    android:id="@+id/energy_base_plan_kw3"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/en_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="0kW"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="5">
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/en_tv2"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全年基本电费"/>
                <TextView
                    android:id="@+id/energy_base_plan_allprice3"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/en_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="0元"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y48"/>
    </LinearLayout>


</ScrollView>

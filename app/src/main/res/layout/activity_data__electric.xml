<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
   >
    <include
        layout="@layout/toobar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/y122">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingLeft="@dimen/x33"
                android:gravity="center_vertical"
                android:text="电量"
                android:textSize="14sp"
                android:textColor="#262626"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/y12"
                    android:textSize="11sp"
                    android:textColor="#C8C8C8"
                    android:text="原始"/>
                <TextView
                    android:paddingTop="@dimen/y12"
                    android:textColor="#C8C8C8"
                    android:id="@+id/electrical_num"
                    android:layout_below="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="17sp"
                    android:text="￥"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <!--<TextView-->
                <!--android:id="@+id/tv2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:textColor="@color/orangered"-->
                <!--android:paddingTop="5dp"-->
                <!--android:text="校验后"/>-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:textColor="#FFA030"
                    android:text="正在校验"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/electrical_verify"
                android:src="@mipmap/data_checkout"
                android:layout_marginLeft="@dimen/y9"
                android:layout_marginRight="@dimen/x23"
                android:layout_gravity="center"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/y28" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/cut_off_line_5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y122"
                android:orientation="vertical">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/x34"
                    android:gravity="center_vertical"
                    android:text="电量详情"
                    android:textSize="14sp"
                    android:textColor="#262626"/>
            </LinearLayout>

            <cn.tties.energy.chart.LineDataChart
                android:id="@+id/electrical_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y428"
                android:layout_alignParentTop="true"
                >

            </cn.tties.energy.chart.LineDataChart>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/slategrey"
            >
            <LinearLayout
                android:id="@+id/data_electrical_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/data_electrical_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="选择时间"/>
                <ImageView
                    android:src="@mipmap/arrows"
                    android:layout_marginLeft="@dimen/x23"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/y24"
                    />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/data_allelectric_electrical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/data_electrical_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="总电量"/>
                <ImageView
                    android:src="@mipmap/arrows"
                    android:layout_marginLeft="@dimen/x23"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/y24"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>

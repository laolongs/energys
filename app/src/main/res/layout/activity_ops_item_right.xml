<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <LinearLayout
        android:id="@+id/ops_item_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/btn_date_dwmy_normal"
        android:layout_height="@dimen/y344">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ops_item_title"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y40"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:textSize="16sp"
                android:lines="4"
                android:textColor="#8B8B8B"
                android:lineSpacingMultiplier="1.1"
                android:ellipsize="end"
                android:text="显示异常报警，正常开启亮度不适，显示文字不清晰，时钟不正确，操作不灵活，屏幕屏保不正"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/y40"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ops_item_img"
                    android:src="@mipmap/ops_cabinet_pending"
                    android:layout_width="@dimen/x107"
                    android:layout_height="@dimen/y96"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginRight="@dimen/x36"
            style="@style/cut_off_line_1dp"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ops_item_time"
                android:layout_marginTop="@dimen/x23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:textSize="14sp"
                android:textColor="#D5D5D5"
                android:text="2018年03月05日  18：20"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/y10"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/y20"
                android:layout_height="@dimen/y34">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@mipmap/ops_location"
                        android:layout_width="@dimen/x23"
                        android:layout_height="@dimen/y28"
                        android:layout_marginLeft="@dimen/x45"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/y10"
                        android:id="@+id/ops_item_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="#D5D5D5"
                        android:textSize="13sp"
                        android:singleLine="true"
                        android:text="88#高压室"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/border"
        />
</LinearLayout>
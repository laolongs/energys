<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    cube_ptr:context="tties.cn.energy.view.activity.DataActivity">
    <include
        layout="@layout/toobar"/>
    <LinearLayout
        android:layout_marginRight="@dimen/x24"
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/y144">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="@dimen/y28"
                android:layout_marginLeft="@dimen/x24"
                android:id="@+id/ques_img"
                android:layout_width="@dimen/x107"
                android:layout_height="@dimen/y96"
                android:gravity="center"
                android:src="@mipmap/ops_electricity_pending"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/y40"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="5">
                <TextView
                    android:layout_marginTop="@dimen/y28"
                    android:id="@+id/ques_index_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="配电房问题"/>
                <TextView
                    android:id="@+id/ques_index"
                    android:layout_below="@+id/ques_index_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:text="E0189234"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="@dimen/x24"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ques_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFA835"
                    android:textSize="20sp"
                    android:text="紧急"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/cut_off_line_2dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/qu_ll_top"
            android:paddingLeft="@dimen/x45"
            android:paddingRight="@dimen/x24"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/y28"
                android:id="@+id/ques_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描述"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ListView
                android:id="@+id/list_question_list"
                style="@style/table_listview" />

            <!--<TextView-->
                <!--android:id="@+id/ques_title"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:textSize="18sp"-->
                <!--android:text="显示异常报警，正常开启亮度不适，显示文字不清晰，时钟不正确，操作不灵活，屏幕屏保不正常"/>-->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40">
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/ques_value_tv1"
                    style="@style/questions_text_style"
                    android:text="A项"/>
                <TextView
                    android:textSize="12sp"
                    android:id="@+id/ques_value_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:text="420V"/>
                <TextView
                    android:id="@+id/ques_value_tv2"
                    android:layout_marginLeft="@dimen/x24"
                    style="@style/questions_text_style"
                    android:text="B项"/>
                <TextView
                    android:id="@+id/ques_value_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:text="420V"/>
                <TextView
                    android:id="@+id/ques_value_tv3"
                    android:layout_marginLeft="@dimen/x24"
                    style="@style/questions_text_style"
                    android:text="C项"/>
                <TextView
                    android:id="@+id/ques_value_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:text="420V"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/y38"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y36">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#D5D5D5"
                    android:id="@+id/ques_createtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018/03/05"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/y10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@mipmap/ops_location"
                    android:layout_width="@dimen/x23"
                    android:layout_height="@dimen/y28"
                   />
                <TextView
                    android:id="@+id/ques_address"
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#D5D5D5"
                    android:textSize="12sp"
                    android:text="1#高压室.1#馈线柜.1#刀闸"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/y34"
            android:id="@+id/qu_ll_cneter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:layout_below="@+id/qu_ll_top"
            android:background="@mipmap/ops_wavyline"/>
        <android.support.design.widget.TabLayout
            android:layout_marginRight="@dimen/x8"
            android:layout_marginLeft="@dimen/x8"
            android:id="@+id/qu_tab"
            android:layout_below="@id/qu_ll_cneter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            app:tabIndicatorColor="@color/statment_layout_title_h_line"
            app:tabSelectedTextColor="@color/statment_layout_title_h_line"
            app:tabTextColor="#C9C9C9"
            >
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"
            android:id="@+id/qu_vp"
            android:layout_below="@id/qu_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y600">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:layout_below="@id/qu_vp"
            android:id="@+id/qu_bt_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:orientation="horizontal"
            android:background="@color/slategrey"
            >
            <LinearLayout
                android:id="@+id/qu_linkman"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/data_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="联系工程师"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/qu_reply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:text="回复"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>
    </ScrollView>
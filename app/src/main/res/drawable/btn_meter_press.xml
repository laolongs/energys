<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/radiobtn_meterlist_colorLineDefault" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/radiobtn_meterlist_colorLineChoosedShadow" />
        </shape>
    </item>

    <!--上面 为 设置 阴影 效果-->

    <!-- 选中 显示 的 颜色-->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/radiobtn_meterlist_text_press" />
        </shape>
    </item>

    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>